<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mateBlackAccent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/phone_number_input"
    android:layout_alignParentStart="true"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="180dp"
    android:background="@drawable/inputs"
    android:paddingLeft="10dp"
    android:hint="Write Phone no here....."
    android:textColorHint="@color/cardview_light_background"
    android:textColor="@color/cardview_light_background"
    android:textAllCaps="false"
    android:inputType="phone"
    android:textSize="15dp"
    android:drawableStart="@drawable/phonee"
    android:textStyle="bold"
    android:textAlignment="center"/>

    <EditText
        android:elevation="10dp"
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/phone_number_input"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:hint="Enter Verification Code..."
        android:textColorHint="@color/cardview_light_background"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:inputType="phone"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp"
        android:drawableStart="@drawable/passwordd"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:elevation="10dp"
        android:id="@+id/send_verification_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_below="@id/verification_code_input"
        />

    <Button
        android:elevation="10dp"
        android:id="@+id/verify_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:textSize="19sp"
        android:visibility="invisible"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/send_verification_code_button"
        />

</RelativeLayout>